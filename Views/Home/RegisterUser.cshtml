<div class="container vh-100 d-flex justify-content-center align-items-center">
    <div class="form-container p-4 rounded shadow-lg"
         style="background: rgba(255, 255, 255, 0.9); backdrop-filter: blur(5px); max-width: 450px; width: 100%;">
        <form action="/Home/RegisterUser" method="post">
            <h3 class="text-center text-primary mb-4 fw-bold">Register Here</h3>
            <div class="mb-3">
                <label for="txName" class="form-label">Name</label>
                <input type="text" id="txName" name="txName" class="form-control" placeholder="Enter your name" required>
            </div>
            <div class="mb-3">
                <label for="txPsw" class="form-label">Password</label>
                <input type="password" id="txPsw" name="txPsw" class="form-control" placeholder="Enter your password" required>
            </div>
            <div class="mb-3">
                <label for="role" class="form-label">Role</label>
                <select id="role" name="role" class="form-select">
                    <option value="User">User</option>
                    <option value="Admin">Admin</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="txAddr" class="form-label">Address</label>
                <input type="text" id="txAddr" name="txAddr" class="form-control" placeholder="Enter your Address" required>
            </div>
            <div class="mb-3">
                <label for="txPhone" class="form-label">Phone no</label>
                <input type="text" id="txPhone" name="txPhone" class="form-control" placeholder="Enter your Phone number" required>
            </div>
            <div class="mb-3">
                <label for="txEmail" class="form-label">Email</label>
                <input type="text" id="txEmail" name="txEmail" class="form-control" placeholder="Enter your email Address" required>
            </div>
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-success px-4">Register</button>
                <button type="button" onclick="location.href='https://localhost:7024/'" class="btn btn-primary px-4 ms-2">Home</button>
            </div>
        </form>
        @if (ViewBag.Message != null)
        {
            <p class="text-center text-danger mt-3">@ViewBag.Message</p>
        }
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #74ebd5, #acb6e5);
        background-size: cover;
        font-family: Arial, sans-serif;
        margin: 0;
        height: 100vh;
    }

    .form-container {
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }

    h3 {
        text-decoration: underline;
    }

    input, select {
        transition: box-shadow 0.3s ease-in-out, transform 0.3s ease-in-out;
    }

        input:focus, select:focus {
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.8);
            transform: scale(1.01);
        }

    button {
        font-weight: bold;
        transition: background-color 0.3s ease-in-out, transform 0.3s ease-in-out;
    }

        button:hover {
            transform: scale(1.05);
            background-color: #218838;
        }

    .btn-primary:hover {
        background-color: #0056b3;
    }
</style>