@model insuranceApp1.Models.Policy

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/UserPolicyLayout.cshtml";
}

<h1>CreatePolicy</h1>
<h3>Welcome , @ViewBag.UserName</h3>
<hr />
<div class="row">
    <div class="col-md-4"> 
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PolicyType" class="control-label"></label>
                <input asp-for="PolicyType" class="form-control" />
                <span asp-validation-for="PolicyType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoverageAmount" class="control-label"></label>
                <input asp-for="CoverageAmount" class="form-control" />
                <span asp-validation-for="CoverageAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PremiumAmount" class="control-label"></label>
                <input asp-for="PremiumAmount" class="form-control" />
                <span asp-validation-for="PremiumAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValidityStartDate" class="control-label"></label>
                <input asp-for="ValidityStartDate" class="form-control" />
                <span asp-validation-for="ValidityStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValidityEndDate" class="control-label"></label>
                <input asp-for="ValidityEndDate" class="form-control" />
                <span asp-validation-for="ValidityEndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

