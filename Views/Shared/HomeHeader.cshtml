<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Interactive Insurance Policy Management</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light text-center">

    <!-- Header Section -->
    <header class="border-bottom border-success py-4">
        <h1 class="text-dark fs-3 mb-4" style="color: teal;">Insurance Policy Management</h1>
        <nav>
            <div class="d-flex justify-content-center gap-3">
                <a href="https://localhost:7024/#home" class="btn btn-outline-success fw-bold px-4 py-2" style="transition: transform 0.3s;">
                    Home
                </a>
                <a href="#about" class="btn btn-outline-primary fw-bold px-4 py-2" style="transition: transform 0.3s;">
                    About Us
                </a>
                <a href="#contact" class="btn btn-outline-danger fw-bold px-4 py-2" style="transition: transform 0.3s;">
                    Contact
                </a>
            </div>
        </nav>
    </header>

    <!-- Optional JavaScript for Button Hover Effects -->
    <script>
        document.querySelectorAll('.btn').forEach(button => {
            button.addEventListener('mouseover', () => {
                button.style.transform = 'scale(1.1)';
            });
            button.addEventListener('mouseout', () => {
                button.style.transform = 'scale(1)';
            });
        });
    </script>

    <!-- Include Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
