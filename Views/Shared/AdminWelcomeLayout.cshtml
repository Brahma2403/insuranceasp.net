<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Center the main content */
        .center-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 80vh;
        }
        /* Hover effects */
        .nav-pills .nav-link {
            background-color: #f8f9fa;
            color: #007bff; /* Default link color */
        }

            .nav-pills .nav-link:hover {
                background-color: #007bff;
                color: white;
                transition: 0.3s ease-in-out;
            }

        .footer {
            position: fixed;
            bottom: 0;
            width: 100%;
            background-color: #343a40;
            color: white;
        }
    </style>
</head>
<body class="bg-light">
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <h3>Welcome , @ViewBag.UserName</h3>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" href="#">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Contact</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Central Content -->
    <div class="center-container">
        <div class="hover-box p-4 border rounded shadow bg-white">
            <h4 class="text-center mb-4">Options</h4>
            <ul class="nav nav-pills flex-column align-items-center">
                <li class="nav-item mb-2">
                    <a class="nav-link" href="https://localhost:7024/Policy/Index">Policy</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link" href="https://localhost:7024/Claim/Index">Claim</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link" href="https://localhost:7024/Customer/Index">Customer</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link" href="https://localhost:7024/PremiumCalculation/Index">PremiumValues</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="https://localhost:7024/PremiumCalculation/FillCalculationTable">Calculation</a>
                </li>
            </ul>
            <a href="https://localhost:7024/" class="text-decoration-none">SignOut</a>
        </div>
    </div>

    <!-- Render Body -->
    <div>
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="footer text-center py-3">
        @Html.Partial("InsuranceFooter")
    </footer>

    <!-- Include Bootstrap JS and Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>